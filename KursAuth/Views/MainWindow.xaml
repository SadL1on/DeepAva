<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:KursAuth.ViewModels;assembly=KursAuth"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="KursAuth.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="KursAuth" Height="300" Width="400">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid Name="Auth">
      <TextBlock HorizontalAlignment="Center" FontSize="30">Авторизация</TextBlock>
      <TextBox Name="Login" Width="200" Height="30"></TextBox>
      <TextBox Name="Password" Width="200" Height="30" Margin="300"></TextBox>
      <Button Name="On" Width="200" Height="30" VerticalAlignment="Bottom">Войти </Button>
     
    </Grid>
</Window>
