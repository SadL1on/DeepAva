<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Remove="Views\MainAuth.xaml" />
    <AvaloniaResource Remove="Views\Messengers\Contacts.xaml" />
    <AvaloniaResource Remove="Views\Messengers\Messages.xaml" />
    <AvaloniaResource Remove="Views\Messengers\VkAuth.xaml" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Views\MainAuth.xaml" />
    <None Remove="Views\Messengers\Contacts.xaml" />
    <None Remove="Views\Messengers\Messages.xaml" />
    <None Remove="Views\Messengers\VkAuth.xaml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.0" />
    <PackageReference Include="Avalonia.Desktop" Version="0.9.0" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.0" />
    <PackageReference Include="Castle.Windsor" Version="5.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="SimpleInjector" Version="4.9.2" />
    <PackageReference Include="VkNet" Version="1.50.0" />
    <PackageReference Include="VkNet.AudioBypassService" Version="1.5.3" />
    <PackageReference Include="VkNet" Version="1.50.0" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\Messengers\Contacts.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\Messengers\Messages.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\MainAuth.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\Messengers\VkAuth.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
</Project>
