<Window
    x:Class="KursAuth.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:KursAuth.Views;assembly=KursAuth"
    xmlns:vm="clr-namespace:KursAuth.ViewModels;assembly=KursAuth"
    Title="KursAuth"
    Width="400"
    Height="300"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid Name="Main" ColumnDefinitions="*,Auto">
      <StackPanel IsVisible="{Binding IsVisAuth}">        
        <TextBlock HorizontalAlignment="Center" FontSize="30">Авторизация</TextBlock>      
        <TextBox 
            Name="Login"
            Width="200"
            Height="30"
            Margin="10, 70, 10, 30" />
        <TextBox
            PasswordChar="*"
            Name="Password"
            Width="200"
            Height="30"
            Margin="10, 0, 10, 30"/>
        <Button
            Name="On"
            Width="200"
            Height="30">
          Войти
        </Button>
      </StackPanel>

      <v:RegControl Grid.Column="1" IsVisible="{Binding IsVisRegControl}" />
    </Grid>
</Window>
