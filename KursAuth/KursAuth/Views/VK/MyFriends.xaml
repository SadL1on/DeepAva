<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="KursAuth.Views.MyFriends"
        Title="MyFriends">
  <Grid>

    <ListBox x:Name="Friends">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Margin="5">
            <TextBlock FontSize="16" Text="{Binding Path=FirstName}" />
            <TextBlock FontSize="16" Text="{Binding Path=LastName}"/>
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
    <Button VerticalAlignment="Bottom" Width="70" HorizontalAlignment="Left" Name="Back">Назад</Button>

  </Grid>
</Window>
