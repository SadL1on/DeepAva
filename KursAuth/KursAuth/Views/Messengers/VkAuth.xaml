<UserControl
    x:Class="KursAuth.Views.Messengers.VkAuth"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Name="VkAuth" Background="DarkCyan">
        <StackPanel IsVisible="{Binding IsVisAuth}">
            <TextBlock HorizontalAlignment="Center" FontSize="30">Авторизация</TextBlock>
            <TextBox
                Name="Login"
                Width="200"
                Height="30"
                Margin="10,70,10,30" />
            <TextBox
                Name="Password"
                Width="200"
                Height="30"
                Margin="10,0,10,30"
                PasswordChar="*" />
            <Button
                Name="On"
                Width="200"
                Height="30">
                Войти
            </Button>
        </StackPanel>
    </Grid>

</UserControl>
