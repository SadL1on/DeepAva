    <Style Selector="Border.TopicHeaderBorder3">
        <Setter Property="BorderThickness" Value="0 7 0 0" />
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
                    <GradientStop Offset="0" Color="#DBDBDB" />
                    <GradientStop Offset="0.5" Color="#FFFFFF" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <Style Selector="Border.TopicHeaderBorder2">
        <Setter Property="BorderThickness" Value="0 7 0 0" />
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
                    <GradientStop Offset="0" Color="#DBDBDB" />
                    <GradientStop Offset="0.1" Color="#FFFFFF" />
                </LinearGradientBrush>
            </Setter.Value>
